{
    "extends": "eslint:recommended",
    "env": {
        "browser" : true,
        "es6"     : true,
        "node"    : true,
        "amd"     : true,
        "mocha"   : true
    },
    "rules": {
        "semi"                   : 2,
        "no-console"             : 0,
        "no-unused-vars"         : [1, {"vars" : "all", "args" : "after-used"} ],
        "arrow-parens"           : 2,
        "arrow-spacing"          : 2,
        "constructor-super"      : 2,
        "generator-star-spacing" : 2,
        "no-class-assign"        : 2,
        "no-const-assign"        : 2,
        "no-dupe-class-members"  : 2,
        "no-empty-pattern"       : 2,
        "no-this-before-super"   : 2,
        "no-var"                 : 1,
        "object-shorthand"       : 2,
        "prefer-arrow-callback"  : 2,
        "prefer-const"           : 2,
        "prefer-reflect"         : 2,
        "prefer-spread"          : 2,
        "prefer-template"        : 2,
        "require-yield"          : 2
    }
}
